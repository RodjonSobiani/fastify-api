{
  "name": "fastify-api",
  "version": "1.0.0",
  "description": "Learning Fastify",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "NODE_ENV=production ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "start:local": "tsx watch src/index.ts",
    "start:local:bun": "bun --watch src/index.ts",
    "start:build": "bun build && node -r source-map-support/register build/cmd/main.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "code-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RodjonSobiani/fastify-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RodjonSobiani/fastify-api/issues"
  },
  "homepage": "https://github.com/RodjonSobiani/fastify-api#readme",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.2",
    "@fastify/sensible": "^6.0.2",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "swagger-jsdoc": "^6.2.8",
    "toad-scheduler": "^3.0.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "^10.0.0",
    "bun": "^1.1.42",
    "eslint": "^9.17.0",
    "kysely-codegen": "^0.17.0",
    "nodemon": "^3.1.9",
    "npm-check-updates": "^17.1.12",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
