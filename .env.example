# === Основные настройки проекта ===
APP_NAME=
APP_ENV=                       # Возможные значения: development, testing, production
APP_DEBUG=true | false         # Включить/выключить режим отладки
APP_URL=http://localhost:8080

# === Настройки сервера ===
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# === Настройки базы данных ===
DB_CONNECTION=postgres         # Тип базы данных (mysql, postgres, sqlite)
DB_HOST=localhost              # Хост базы данных (localhost, 127.0.0.1)
DB_PORT=5432                   # Порт базы данных
DB_DATABASE=fastify-api        # Имя базы данных
DB_USERNAME=                   # Имя пользователя базы данных
DB_PASSWORD=                   # Пароль для доступа к базе данных
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fastify-api"

# === JWT или OAuth настройки ===
JWT_SECRET=
JWT_EXPIRATION=3600            # Время жизни токена (в секундах)

=== Локализация ===
DEFAULT_LOCALE=ru
DEFAULT_TIMEZONE=Europe/Moscow

# === Настройки API ===
# API_KEY=fastify-api-key        # Ключ для внешнего API
# API_SECRET=fastify-api-secret
# API_BASE_URL=https://api.example.com

# === Настройки кэширования ===
; CACHE_DRIVER=redis             # Возможные значения: file, redis, memcached
; CACHE_HOST=127.0.0.1
; CACHE_PORT=6379

# === Настройки для электронной почты ===
; MAIL_DRIVER=smtp
; MAIL_HOST=smtp.mailtrap.io
; MAIL_PORT=2525
; MAIL_USERNAME=_mail_username_
; MAIL_PASSWORD=_mail_password_
; MAIL_ENCRYPTION=tls
; MAIL_FROM_ADDRESS=no-reply@myawesomeapp.com
; MAIL_FROM_NAME="MyAwesomeApp"

# === Настройки логирования ===
; LOG_CHANNEL=stack               # Возможные значения: stack, single, daily
; LOG_LEVEL=error                 # Уровень логирования: debug, info, warning, error, critical
; DB_LOG_LEVEL=off | on           # Возможные значения: on, off

# === Сторонние интеграции ===
# Пример: Настройки Stripe
; STRIPE_KEY=your_stripe_key
; STRIPE_SECRET=your_stripe_secret

# === Пример переменных для тестирования ===
; TESTING_USER_EMAIL=test_user@example.com
; TESTING_USER_PASSWORD=test_password
